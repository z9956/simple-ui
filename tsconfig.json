{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "dist/types/",
		"jsx": "react-jsx",
		"lib": ["es6", "dom"],
		"module": "ES6",
		"moduleResolution": "node",
		"removeComments": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"simple-ui": ["components/index.tsx"]
		}
	},
	"include": ["components/**/*.tsx?$"],
	"exclude": ["node_modules", "dist"]
}
